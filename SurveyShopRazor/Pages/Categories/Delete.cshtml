@page
@model SurveyShopRazor.Pages.Categories.DeleteModel

<form method="post">
    <input hidden asp-for="@Model.Category.Id"/>
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Category</h2>
            <hr />
        </div>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.Category.Name"></label>
        <input class="form-control" asp-for="@Model.Category.Name" readonly/>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.Category.DisplayOrder"></label>
        <input class="form-control" asp-for="@Model.Category.DisplayOrder" readonly/>
    </div>
    <button type="submit" class="btn btn-primary">Delete</button>
    <a asp-page="/Categories/Index" class="btn btn-danger">Back</a>
</form>

@section Scripts
    {
    <partial name="_ValidationScriptsPartial" />
}
