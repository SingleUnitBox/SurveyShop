@page
@model SurveyShopRazor.Pages.Categories.EditModel

<form method="post">
    <input asp-for="@Model.Category.Id" hidden/>
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit Category</h2>
            <hr />
        </div>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.Category.Name"></label>
        <input class="form-control" asp-for="@Model.Category.Name" />
        <span class="text-danger" asp-validation-for="@Model.Category.Name"></span>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.Category.DisplayOrder"></label>
        <input class="form-control" asp-for="@Model.Category.DisplayOrder" />
        <span class="text-danger" asp-validation-for="@Model.Category.DisplayOrder"></span>
    </div>
    <button type="submit" class="btn btn-primary">Edit</button>
    <a asp-page="/Categories/Index" class="btn btn-danger">Back</a>
</form>

@section Scripts
    {
    <partial name="_ValidationScriptsPartial" />
}
