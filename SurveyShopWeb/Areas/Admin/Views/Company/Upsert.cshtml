@model Company

<form method="post" enctype="multipart/form-data">
    <input hidden asp-for="Id" />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            @if (Model.Id == 0)
            {
                <h2 class="text-primary">
                    Create Company
                </h2>
            }
            else
            {
                <h2 class="text-primary">
                    Edit Company
                </h2>
            }
            <hr />
        </div>
    </div>
    <div class="mb-3">
        <label asp-for="Name"></label>
        <input class="form-control" asp-for="Name" />
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Street"></label>
        <input class="form-control" asp-for="Street" />
        <span class="text-danger" asp-validation-for="Street"></span>
    </div>
    <div class="mb-3">
        <label asp-for="City"></label>
        <input class="form-control" asp-for="City" />
        <span class="text-danger" asp-validation-for="City"></span>
    </div>
    <div class="mb-3">
        <label asp-for="State"></label>
        <input class="form-control" asp-for="State" />
        <span class="text-danger" asp-validation-for="State"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Postcode"></label>
        <input class="form-control" asp-for="Postcode" />
        <span class="text-danger" asp-validation-for="Postcode"></span>
    </div>
    <div class="mb-3">
        <label asp-for="PhoneNumber"></label>
        <input class="form-control" asp-for="PhoneNumber" />
        <span class="text-danger" asp-validation-for="PhoneNumber"></span>
    </div>

    @if (Model.Id != 0)
    {
        <button type="submit" class="btn btn-primary">
            Update
        </button>
    }
    else
    {
        <button type="submit" class="btn btn-primary">
            Create
        </button>
    }
    <a asp-controller="Company" asp-action="Index" class="btn btn-danger">Back</a>
</form>

@section Scripts
    {
    <partial name="_ValidationScriptsPartial" />
}