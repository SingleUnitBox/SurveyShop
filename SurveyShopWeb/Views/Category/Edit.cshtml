@model Category

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit Category</h2>
            <hr />
        </div>
    </div>
    <div class="mb-3">
        <label asp-for="Id"></label>
        <input class="form-control" asp-for="@Model.Id" readonly/>
    </div>
    <div class="mb-3">
        <label asp-for="Name"></label>
        <input class="form-control" asp-for="@Model.Name" />
        <span class="text-danger" asp-validation-for="@Model.Name"></span>
    </div>
    <div class="mb-3">
        <label asp-for="DisplayOrder"></label>
        <input class="form-control" asp-for="@Model.DisplayOrder" />
        <span class="text-danger" asp-validation-for="@Model.DisplayOrder"></span>
    </div>
    <button type="submit" class="btn btn-primary">Edit</button>
    <a asp-controller="Category" asp-action="Index" class="btn btn-danger">Back</a>
</form>

@section Scripts
    {
    <partial name="_ValidationScriptsPartial" />
}